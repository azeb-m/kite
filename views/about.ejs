    <script>
      // Function to show elements with delay
      const missionObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const missionSection = document.getElementById("mission");
            missionSection.style.visibility = "visible"; // Make section visible
            missionSection.style.opacity = "1"; // Fade in

            // Animate title
            const title = document.querySelector("#mission h2");
            title.style.opacity = 1;
            title.style.transform = "translateY(0)";

            // Animate each list item with a staggered delay
            const listItems = document.querySelectorAll("#missionList li");
            listItems.forEach((item, index) => {
              setTimeout(() => {
                item.classList.add("visible"); // Trigger animation
              }, (index + 1) * 1000); // Increase delay for each item
            });

            missionObserver.unobserve(entry.target); // Stop observing after it has appeared
          }
        });
      });

      // Observe the mission section
      missionObserver.observe(document.getElementById("mission"));
    </script>

    <script>
      const visionObserver = new IntersectionObserver((entries) => {
